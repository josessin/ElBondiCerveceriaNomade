<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:calendar="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#87543B"
            >

            <TextView
                android:id="@+id/direccionTextV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:background="@color/tw__transparent"
                android:textColor="@color/white"
                android:layout_weight="0.01"
                android:gravity="center"
                android:textSize="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:layout_margin="2dp"
                android:background="#955E42"
                android:layout_weight="0.03">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/notaTextV"
                        android:layout_width="253dp"
                        android:layout_height="314dp"
                        android:layout_above="@+id/calendarV"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/direccionTextV"
                        android:layout_marginTop="4dp"
                        android:layout_toStartOf="@+id/gpsbtn"
                        android:layout_weight="1.43"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="391dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/gpsbtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.50"
                            android:background="@color/tw__transparent"
                            android:drawableBottom="@drawable/gpsclickyellow" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <CalendarView
                android:id="@+id/calendarV"

                android:layout_width="match_parent"
                android:layout_height="247dp"
                android:clickable="true"
                android:background="#B9BAA3"
                android:theme="@style/CalenderViewCustom"
                android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
                android:layout_weight="0.02" />
        </LinearLayout>

</android.support.v7.widget.CardView>
