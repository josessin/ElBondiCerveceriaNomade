<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:calendar="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/layoutcalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        >
        <CalendarView

            android:id="@+id/calendarV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:theme="@style/CalenderViewCustom"
            android:background="@color/orange_logo"
            android:layout_below="@+id/layoutcalendar"

            >
        </CalendarView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:background="#FFF5E2">

        <TextView
            android:id="@+id/direccionTextV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/border"
            android:layout_weight="0.01"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/notaTextV"
                android:layout_width="253dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/calendarV"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/direccionTextV"
                android:textSize="14dp"
                android:layout_toStartOf="@+id/gpsbtn"
                android:textColor="#586F7C" />

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/gpsbtn"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/tw__transparent"
                    android:layout_gravity="center"
                    android:src="@drawable/gpsclickyellow"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
