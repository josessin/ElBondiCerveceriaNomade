<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#87543B"

        >

        <TextView
            android:id="@+id/direccionTextV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_weight="0.03"
            android:background="@color/tw__transparent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_margin="2dp"
            android:background="#955E42">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="389dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/border"
                android:weightSum="2">

                <TextView
                    android:id="@+id/notaTextV"
                    android:layout_width="253dp"
                    android:layout_height="144dp"
                    android:textColor="@color/white"
                    android:layout_above="@+id/calendarV"
                    android:layout_below="@+id/direccionTextV"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/gpsbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/tw__transparent"
                        android:drawableBottom="@drawable/gpsclickyellow"
                        android:layout_gravity="center"
                        android:layout_weight="0.30" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CalendarView
                android:id="@+id/calendarV"

                android:layout_width="match_parent"
                android:layout_height="604dp"
                android:background="#B9BAA3"
                android:clickable="true"
                android:theme="@style/CalenderViewCustom"
                android:weekDayTextAppearance="@style/CalenderViewWeekCustomText" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
